@page
@model iportfolio.Pages.myadmin.ShowExperienceModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1>Show Experience</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Job Title</th>
                        <th scope="col">Location</th>
                        <th scope="col">Start Year</th>
                        <th scope="col">Last Year</th>
                        <th scope="col">Description</th>
                        <th scope="col" colspan="2" align="center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.experience)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.JobTitle</td>
                            <td>@item.Location</td>
                            <td>@item.StartYear</td>
                            <td>@item.EndYear</td>
                            <td>@item.Desc</td>
                            <td>
                                <a class="btn btn-primary" asp-page="UpdateExperience" asp-route-id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger " asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
