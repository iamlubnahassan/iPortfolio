@page
@model iportfolio.Pages.myadmin.AddContactModel
@{
}
<div class="container">
    <form method="post">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h1>
                    Add Contact
                </h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Name</label>
                <input class="form-control" asp-for="contact.Name">
                <span asp-validation-for="contact.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Email</label>
                <input class="form-control" asp-for="contact.Email">
                <span asp-validation-for="contact.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Subject</label>
                <input class="form-control" asp-for="contact.Subject">
                <span asp-validation-for="contact.Subject" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Message</label>
                <input class="form-control" asp-for="contact.Message">
                <span asp-validation-for="contact.Message" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col-md-4">
                <input type="submit" value="Add Contact" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>
