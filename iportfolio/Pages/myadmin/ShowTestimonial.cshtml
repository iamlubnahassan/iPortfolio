@page
@model iportfolio.Pages.myadmin.ShowTestimonialModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1>Show Testimonial</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Designation</th>
                        <th scope="col">Testimonial</th>

                        <th scope="col" colspan="2" align="center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.testimonial)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>@item.Designation</td>
                            <td>@item.theTestimonial</td>


                            <td>
                                <a class="btn btn-primary" asp-page="UpdateTestimonial" asp-route-id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger " asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
